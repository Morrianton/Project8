extends layouts/layout

block headContent

block bodyContent
    form(method='POST', action='/users/' + user.id)
        div
            input(id='userID', name='userID', placeholder='User ID', value=user.userID)
        div
            input(id='name', name='name', placeholder='Name', value=user.name)
        div
            input(id='age', name='age', placeholder='Age', value=user.age)
        div
            input(id='email', name='email', type='email', placeholder='Email', value=user.email)
        div
            input(type='submit', value='Add User')